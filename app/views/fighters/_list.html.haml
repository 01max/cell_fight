.card

  .card-header
    %h2= Fighter.model_name.human.pluralize.humanize

  .card-body
    .row

      .col-12
        .table-responsive-sm

          %table.table.table-hover.table-sm.align-middle
            %thead.thead-dark.text-center
              %tr
                %th{ scope: 'col' }= t('activerecord.attributes.fighter.id').humanize
                %th{ scope: 'col' }= t('activerecord.attributes.fighter.name').humanize
                %th
                  = link_to new_fighter_path, class: 'btn btn-success' do
                    %i.fas.fa-fw.fa-plus

            %tbody
              - fighters.each do |fighter|
                %tr
                  %th.text-center{ scope: 'row' }= fighter.id
                  %td= fighter.name
                  %td.text-center
                    = link_to fighter_path(fighter), class: 'btn btn-sm btn-info', title: t('shared.action.show') do
                      %i.fas.fa-fw.fa-eye
                    = link_to edit_fighter_path(fighter), class: 'btn btn-sm btn-warning', title: t('shared.action.update') do
                      %i.fas.fa-fw.fa-edit

      - if local_assigns[:pagy]
        .col-12.justify-content-center!= pagy_bootstrap_nav(pagy)
