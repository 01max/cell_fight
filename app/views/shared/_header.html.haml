%header.mb-5
  %nav.navbar.navbar-expand-md.navbar-dark.bg-dark
    .container
      = link_to t('shared.header.title'), root_url, { class: 'navbar-brand' }
      %button.navbar-toggler{ data: { toggle: :collapse, taget: '#main-nav' }, aria: { controls: 'main-nav', expanded: false } }
        %span.navbar-toggler-icon

      .collapse.navbar-collapse#main-nav
        = render 'shared/nav'
